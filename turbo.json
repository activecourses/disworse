{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "typecheck": {
            "cache": false
        },
        "//#lint": {},
        "//#lint:fix": {
            "cache": false
        },
        "//#lint:fix:unsafe": {
            "cache": false
        }
    }
}
