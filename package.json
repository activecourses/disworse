        "@commitlint/config-conventional": "^19.5.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10"
    },
    "engines": {
        "node": ">=20"
    },
    "packageManager": "npm@10.8.2",
    "workspaces": [
        "apps/*",
        "packages/*"
